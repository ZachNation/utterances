{
  "name": "utterances",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf output",
    "rollup-utterances": "rollup output/utterances.js --format iife --output dist/utterances.js",
    "rollup-embed": "rollup output/embed.js --format iife --output dist/embed/index.js",
    "rollup": "yarn run rollup-utterances && yarn run rollup-embed",
    "sass": "node-sass src/embed.scss dist/embed/index.css --include-path node_modules",
    "prebuild": "yarn run clean",
    "build": "tsc && yarn run rollup && yarn run sass",
    "watch-output": "chokidar \"output/**/*.js\" --command \"yarn run rollup\"",
    "serve": "browser-sync start --server dist --port 9000 --no-open --no-ui --no-online --no-ghost-mode",
    "predevelop": "yarn run build",
    "develop": "concurrently --kill-others \"yarn run watch-output\" \"tsc --watch\" \"yarn run sass -- --watch --recursive\" \"yarn run serve\"",
    "lint": "tslint --project tsconfig.json",
    "optimize": "uglifyjs --compress --mangle --output dist/utterances.min.js -- dist/utterances.js",
    "inline": "inliner dist/embed/index.html > dist/embed/index.min.html",
    "deploy": "gh-pages --dist dist",
    "chrome": "google-chrome --disable-web-security --allow-running-insecure-content --user-data-dir=\"chrome\""
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "gh-pages": "^0.12.0",
    "inliner": "^1.12.1",
    "node-sass": "^4.5.2",
    "primer-base": "^0.4.2",
    "primer-buttons": "^2.0.0",
    "rollup": "^0.41.6",
    "tslint": "^5.1.0",
    "typescript": "^2.3.2",
    "uglifyjs": "^2.4.10"
  }
}
