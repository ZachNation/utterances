{
  "name": "utterances",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf output",
    "rollup-utterances": "rollup output/utterances.js --format iife --output dist/utterances.js",
    "rollup-index": "rollup output/index.js --format iife --output dist/index.js",
    "rollup": "yarn run rollup-utterances && yarn run rollup-index",
    "sass": "node-sass src/index.scss dist/index.css --include-path node_modules",
    "prebuild": "yarn run clean",
    "build": "tsc && yarn run rollup && yarn run sass -- --output-style compressed",
    "watch-output": "chokidar \"output/**/*.js\" --command \"yarn run rollup\"",
    "serve": "browser-sync start --server dist --port 9000 --no-open --no-ui --no-online --no-ghost-mode",
    "predevelop": "yarn run build",
    "develop": "concurrently --kill-others \"yarn run watch-output\" \"tsc --watch\" \"yarn run sass -- --watch --recursive\" \"yarn run serve\"",
    "lint": "tslint --project tsconfig.json",
    "gh-pages": "git push origin --delete gh-pages && git subtree push --prefix dist origin gh-pages"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "node-sass": "^4.5.2",
    "primer-base": "^0.4.2",
    "rollup": "^0.41.6",
    "tslint": "^5.1.0",
    "typescript": "rc"
  }
}
